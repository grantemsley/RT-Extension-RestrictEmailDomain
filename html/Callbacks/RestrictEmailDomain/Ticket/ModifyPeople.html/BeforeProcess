
<%init>
return unless RT::Extension::RestrictEmailDomain->enabled;

my $args    = $ARGSRef;
my @errors  = RT::Extension::RestrictEmailDomain->ValidateEmailAddresses($args);

if (@errors) {
    push @$results, @errors;
    $$skip_update = 1 if defined $skip_update;
    $$skip        = 1 if defined $skip;          # legacy fallback
}
</%init>
